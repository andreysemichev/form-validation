<div class="goods">
    <div class="goods__inner">
        <h2 class="goods__add-title">Добавить в список</h2>
        <form class="goods__add-form">
            <label><span>Введите имя тоара</span><input class="goods__add-name" type="text" name="name" placeholder="Имя"></label>
            <label><span>Введите цену тоара</span><input class="price__add-price" type="text" name="price" placeholder="Цена"></label>
            <button class="price__add-btn">Добавить</button>
        </form>
        <h2 class="goods__list-title">Список товаров</h2>
        <input type="hidden" name="pageCount" value="{{pagesCount}}">
        <div class="pagination">
            {{{pagination paginationData}}}
        </div>
        <table class="goods__table">
            <thead>
                <tr><th>Имя</th><th>Цена</th><th>Действия</th></tr>
            </thead>
            <tbody>
                {{#each goods}}
                    <tr>
                        <td>
                            <input type="hidden" name="changeName" value="{{this.title}}" class="changeName">
                            <span class="nameText">{{this.title}}</span>
                        </td>
                        <td>
                            <input type="hidden" name="changePrice" value="{{this.price}}" class="changePrice">
                            <span class="priceText">{{this.price}}</span>
                        </td>
                        <td>
                            <button class="changeBtn" data-change="{{this.id}}">Изменить</button>
                            <button class="closeBtn">Закрыть</button>
                            <button class="deleteBtn" data-delete="{{this.id}}">Удалить</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>